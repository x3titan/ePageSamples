// 显示一个定制的警告框
function showAlert() {
       navigator.notification.alert(
           'You are the winner!',  // 显示信息
           'Game Over',            // 标题
           'Done'                  // 按钮名称
       );
}

// 蜂鸣三次
function playBeep() {
       navigator.notification.beep(3);
}

// 震动两秒
function vibrate() {
       navigator.notification.vibrate(1500);
}

setTimeout(function() {
    vibrate();
    showAlert();
},10000);</onPageCreate>
